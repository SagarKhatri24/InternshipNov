<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/bg_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <LinearLayout
        android:id="@+id/signup_login_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_10sdp">

        <TextView
            style="@style/text_14"
            android:text="Already have an account?" />

        <TextView
            android:id="@+id/signup_login"
            style="@style/text_14"
            android:layout_marginLeft="@dimen/_3sdp"
            android:text="Sign In"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_above="@id/signup_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                style="@style/text_22"
                android:text="Sign Up"
                android:textStyle="bold" />

            <TextView
                style="@style/text_14"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="Username"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                app:cardBackgroundColor="@color/bg_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <EditText
                    android:id="@+id/signup_username"
                    style="@style/edit_16"
                    android:inputType="textPersonName" />

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/text_14"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Email"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                app:cardBackgroundColor="@color/bg_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <EditText
                    android:id="@+id/signup_email"
                    style="@style/edit_16"
                    android:inputType="textEmailAddress" />

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/text_14"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Password"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                app:cardBackgroundColor="@color/bg_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <EditText
                    android:id="@+id/signup_password"
                    style="@style/edit_16"
                    android:inputType="textPassword"
                    android:maxLength="15" />

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/text_14"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Confirm Password"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                app:cardBackgroundColor="@color/bg_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <EditText
                    android:id="@+id/signup_confirm_password"
                    style="@style/edit_16"
                    android:inputType="textPassword"
                    android:maxLength="15" />

            </androidx.cardview.widget.CardView>

            <RadioGroup
                android:id="@+id/signup_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/signup_male"
                    style="@style/radio_16"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/signup_female"
                    style="@style/radio_16"
                    android:layout_weight="1"
                    android:text="Female" />

            </RadioGroup>

            <Spinner
                android:id="@+id/signup_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp" />

            <CheckBox
                android:id="@+id/signup_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please Accept Terms And Condition"
                android:textColor="@color/blue_dark"
                android:textSize="@dimen/_12sdp"
                app:buttonTint="@color/blue_dark" />

            <Button
                android:id="@+id/signup_button"
                style="@style/button_16"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Sign Up" />

            <TextView
                style="@style/text_15"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="OR" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_100sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/facebook_icon" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_100sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/twitter" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_100sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/google" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>