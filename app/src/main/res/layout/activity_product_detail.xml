<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:id="@+id/main"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">

            <ImageView
                android:id="@+id/product_detail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app_icon" />

            <TextView
                android:id="@+id/product_detail_discount"
                style="@style/text_12"
                android:background="@drawable/custom_discount"
                android:drawableLeft="@drawable/down_arrow"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_5sdp"
                android:text="38%"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                app:cardElevation="@dimen/_1sdp">

                <TextView
                    android:id="@+id/product_detail_rating"
                    style="@style/text_12"
                    android:drawableRight="@drawable/star"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="4.2"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/product_detail_plus"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/more" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/product_detail_unit"
                style="@style/text_12"
                android:background="@drawable/custom_bg_gray"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="1 kg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_detail_title"
                style="@style/text_14"
                android:layout_marginTop="@dimen/_2sdp"
                android:maxLines="2"
                android:text="FORTUNE Soya Chunks"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_yellow"
                android:orientation="horizontal"
                android:padding="@dimen/_1sdp">

                <TextView
                    android:id="@+id/product_detail_new_price"
                    style="@style/text_14"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="117"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_detail_old_price"
                    style="@style/text_12"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_bg_white"
                    android:gravity="center"
                    android:text="117"
                    android:textColor="#707070"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:justificationMode="inter_word"
                android:id="@+id/product_detail_description"
                style="@style/text_12"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="117"
                android:textColor="#707070" />

        </LinearLayout>

        <Button
            android:id="@+id/product_detail_buy_now"
            android:layout_margin="@dimen/_10sdp"
            android:text="Buy Now"
            style="@style/button_16"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>